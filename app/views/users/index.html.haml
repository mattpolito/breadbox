#main_content
  %h2 All Users
  #users
    - for user in @users
      .users.section
      .row=h user.email
      .row
        = link_to 'Show', user
        |
        = link_to 'Edit', edit_user_path(user)
        |
        = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete

#sidebar
  = link_to 'New user', new_user_path, :class => "button", :id => "new"

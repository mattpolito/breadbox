- div_for(client) do
  .person
    %a.avatar{:href => "#"}
      = image_tag('client.png', :size => '75x75')
      %label=h client.first_name if client.first_name.present?
    %ul.person_info
      %li.name= link_to h(client.name), client
      %li.email=h client.email
      %li.phone=h client.phone
  %h3
    %span.pending
      Pending Invoices
      %strong
        = client.number_of_pending_invoices
  %h3
    %span.due
      Amount Due
      %strong=h cents_to_dollars(client.amount_due)
#main_content
  %h2 
    Editing
    =h @client.name
  #edit_client
    - form_for(@client) do |f| 
      = render :partial => 'form', :locals => { :f => f, :button_text => 'Update' }

#sidebar
  = link_to 'Cancel &amp; Go Back', :back, :class => "button", :id => "cancel"
  = link_to "View #{h(@client.name)}'s Record", @client, :class => "button", :id => "view"

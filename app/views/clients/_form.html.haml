= f.error_messages
%fieldset
  %ul
    %li
      = f.label :first_name 
      = f.text_field :first_name, :class => "text"
    %li
      = f.label :last_name 
      = f.text_field :last_name, :class => "text"
    %li
      = f.label :company
      = f.text_field :company_name, :class => "text"
    %li
      = f.label :email 
      = f.text_field :email, :class => "text"
    %li
      = f.label :phone 
      = f.text_field :phone, :class => "text"
    %li
      = f.label :fax 
      = f.text_field :fax, :class => "text"
    
- f.fields_for :address do |address|
  %fieldset.last
    %ul
      %li
        = address.label :street1, 'Street 1'
        = address.text_field :street1, :class => 'text'
      %li
        = address.label :street2, 'Street 2'
        = address.text_field :street2, :class => 'text'
      %li
        = address.label :city
        = address.text_field :city, :class => 'text'
      %li
        = address.label :state
        = address.text_field :state, :class => 'text'
      %li
        = address.label :zipcode
        = address.text_field :zipcode, :class => 'text'
      %li
        = address.label :country
        = address.text_field :country, :class => 'text'
%p= f.submit button_text
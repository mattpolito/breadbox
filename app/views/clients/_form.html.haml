= f.error_messages
%fieldset
  %legend Client Information
  %ul
    %li= f.label :name 
    %li= f.text_field :name, :class => "text"
    %li= f.label :email 
    %li= f.text_field :email, :class => "text"
    %li= f.label :phone 
    %li= f.text_field :phone, :class => "text"
    %li= f.label :fax 
    %li= f.text_field :fax, :class => "text"
    
- f.fields_for :address do |address|
  %fieldset
    %legend Address
    %ul
      %li= address.label :street1, 'Street 1'
      %li= address.text_field :street1, :class => 'text'
      %li= address.label :street2, 'Street 2'
      %li= address.text_field :street2, :class => 'text'
      %li= address.label :city
      %li= address.text_field :city, :class => 'text'
      %li= address.label :state
      %li= address.text_field :state, :class => 'text'
      %li= address.label :zipcode
      %li= address.text_field :zipcode, :class => 'text'
      %li= address.label :country
      %li= address.text_field :country, :class => 'text'
%p= f.submit button_text
%h1 Login

- form_for @user_session, :url => user_session_path, :live_validations => true do |f|
  = f.error_messages
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.check_box :remember_me
    = f.label :remember_me
  .field
    = f.submit "Login"

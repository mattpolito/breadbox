- content_for :title do
  Welcome to Bread Box. Please Login.
#login
  - form_for @user_session, :url => user_session_path do |f|
    = f.error_messages
    %fieldset
      %ul#user_detials
        %li
          = f.label :email
          = f.text_field :email, :class => "text", :id => "email"
        %li
          = f.label :password
          = f.password_field :password, :class => "text", :id => "password"
      %ul#remember
        %li
          = f.check_box :remember_me
          = f.label :remember_me
        %li.login
          = f.submit "Login", :id => "submit"

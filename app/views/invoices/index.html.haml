#main_content
  %h2 Invoices
  %table
    %thead
      %tr
        %th Invoice Date
        %th Invoice #
        %th Client
        %th Status
        %th Total
        %th Due
    %tbody
    - for invoice in @invoices
      %tr
        %td=h invoice.billing_date
        %td= link_to h(invoice.number), invoice
        %td=h invoice.client.name
        %td=# h invoice.status
        %td=# h invoice.total_amount
        %td=# h invoice.amount_due

#sidebar
  = link_to 'Add New invoice', new_invoice_path, :id => 'new'

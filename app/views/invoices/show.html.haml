#main_content.show_invoice
  %h2 Invoice ##{@invoice.number}
  
  #invoice_info
    %h3=h @invoice.client.name
    %fieldset
      %ul
        %li 
          %strong
            Client:
          =h @invoice.client.name
        %li 
          %strong
            Number:
          =h @invoice.number
        %li
          %strong
            Payment Due:
          =h @invoice.payment_due_date.to_s(:regular)
        %li 
          %strong
            Billing Date:
          =h @invoice.billing_date.to_s(:regular)
    
    %h3 Items
    %fieldset
      %table#invoice_lines
        %thead
          %tr
            %th.description Description
            %th.quantity Quantity
            %th.unit_price Unit Price
            %th
        %tbody
          - @invoice.invoice_lines.each do |invoice_line|
            %tr.invoice_line
              %td.description= invoice_line.description
              %td.quantity= invoice_line.quantity
              %td.price
                %label.currency $
                = invoice_line.price
    %h3 Notes
    %fieldset
      %ul
        %li
          Note:
          = @invoice.note
  
#sidebar
  = link_to "Edit Invoice #{@invoice.number}", edit_invoice_path(@invoice), :id => "edit", :class => "button"
  = link_to 'Enter a Payment', new_invoice_payment_path(@invoice), :id => 'edit', :class => 'button'
  = link_to 'Printable Invoice (PDF)', invoice_path(@invoice, :format => 'pdf'), :id => 'pdf', :class => 'button'
  = link_to 'Go Back', :back, :id => "back", :class => "button"
  
= render :partial => 'payments' unless @invoice.payments.blank?
    

